---
import { Image } from 'astro:assets'; 
import sliderImage from '../assets/imgHeroBanner.png'; 
import ButtonLink from "../components/Heroui/ButtonLaPergola";
const title = "El balneario ideal para disfrutar tus vacaciones";
const buttonText = "Empez√° tus vacaciones";
---

<section class="relative h-[620px] bg-cover bg-center">
    <Image src={sliderImage} loading={"eager"} fetchpriority={"high"} alt="Hero Background" class="absolute inset-0 w-full h-full object-cover -z-10" />
    <div class="absolute inset-0 bg-linear-to-b from-[var(--gradient-color)] from-10% to-transparent 110%"></div>
    <div class="relative  flex flex-col items-center justify-center h-full">
        

        <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col items-center justify-center gap-10 text-center">
                <h1 class="text-4xl font-bold text-white sm:text-5xl md:text-6xl">{title}</h1>
                <ButtonLink client:load href="#">
                    {buttonText}
                </ButtonLink>
            </div>
        </div>
    </div>
</section>

<style>
section {
    --gradient-color:#1b62c6 ;
