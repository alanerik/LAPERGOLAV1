---
import { Image } from 'astro:assets';
import { Card } from "@heroui/card";
import ButtonLink from "./Heroui/ButtonLaPergola";
import sliderImage from '../assets/imgHeroBanner.png'; 

interface Props {
  title?: string;
  buttonText?: string;
  buttonHref?: string;
  alt?: string;
  gradientFrom?: string;
  gradientTo?: string;
}

const { 
  title = "Siempre en el mismo lugar junto a ustedes",
  buttonText = "Hace click y disfruta el verano",
  buttonHref = "#",
  alt = "Banner de La Pergola",
  gradientFrom = "from-[#1b62c6]",
  gradientTo = "to-transparent"
} = Astro.props;
---

<div class="relative py-16">
  <Card 
    client:load
    isPressable
    className="w-full h-96 bg-cover bg-center relative overflow-hidden"
  >
    <!-- Imagen de fondo optimizada por Astro -->
    <div class="absolute inset-0">
      <Image 
        src={sliderImage} 
        alt={alt}
        class="w-full h-full object-cover"
        widths={[400, 800, 1200]}
        sizes="100vw"
      />
    </div>
    
    <!-- Gradiente overlay -->
    <div class={`absolute inset-0 bg-gradient-to-r ${gradientFrom} ${gradientTo}`}></div>
    
    <!-- Contenido -->
    <div class="relative h-full flex flex-col justify-center items-start text-white lg:ml-20 ml-4 z-10">
      <h2 class="text-3xl md:text-5xl font-bold w-full md:w-1/3 text-left">
        {title}
      </h2>
      <ButtonLink client:load href={buttonHref} className="mt-6">
        {buttonText}
      </ButtonLink>
    </div>
  </Card>
</div>